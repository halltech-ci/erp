            <td class="text-right">
                <span t-field="order_line.item"/>
            </td>
        </xpath>
        
        <xpath expr="//table[@class='table table-condensed']//tbody/tr/td[2]" position="after">
            <td class="text-right">
                <span t-field="order_line.product_uom"/>
